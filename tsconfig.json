{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@Controllers/*": [
        "src/controllers/*"
      ],
      "@Errors/*": [
        "src/errors/*"
      ],
      "@Types/*": [
        "src/@types/*"
      ],
      "@Middlewares/*": [
        "src/middlewares/*"
      ],
    }
  }
}
