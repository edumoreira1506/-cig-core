{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "ES2020"
    ],
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@Controllers/*": [
        "src/controllers/*"
      ],
      "@Errors/*": [
        "src/errors/*"
      ],
      "@Types/*": [
        "src/@types/*"
      ],
      "@Middlewares/*": [
        "src/middlewares/*"
      ],
      "@Decorators/*": [
        "src/decorators/*"
      ],
      "@Configs/*": [
        "src/configs/*"
      ],
      "@Repositories/*": [
        "src/repositories/*"
      ],
      "@Clients/*": [
        "src/clients/*"
      ],
      "@Services/*": [
        "src/services/*"
      ],
      "@Utils/*": [
        "src/utils/*"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
